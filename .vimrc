syntax on
filetype indent plugin on
set nu
set ai
set si
set hlsearch
set nocompatible
set bs=indent,eol,start
set bg=dark
set title
set wrap
set ruler
set so=999

set tabstop=8
set softtabstop=4
set expandtab
set shiftwidth=4
set textwidth=79
set smartindent cinwords=if,elif,else,for,while,except,finally,def,class

set clipboard=unnamed
